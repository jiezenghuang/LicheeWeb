    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Mission</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mission.Name" class="control-label"></label>
                <input asp-for="Mission.Name" class="form-control" />
                <span asp-validation-for="Mission.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mission.Description" class="control-label"></label>
                <input asp-for="Mission.Description" class="form-control" />
                <span asp-validation-for="Mission.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mission.StartTime" class="control-label"></label>
                <input asp-for="Mission.StartTime" class="form-control" />
                <span asp-validation-for="Mission.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mission.FinishTime" class="control-label"></label>
                <input asp-for="Mission.FinishTime" class="form-control" />
                <span asp-validation-for="Mission.FinishTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mission.Ratio" class="control-label"></label>
                <input asp-for="Mission.Ratio" class="form-control" />
                <span asp-validation-for="Mission.Ratio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mission.Progress" class="control-label"></label>
                <input asp-for="Mission.Progress" class="form-control" />
                <span asp-validation-for="Mission.Progress" class="text-danger"></span>
            </div>
