                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Mission.IsCompleted" /> @Html.DisplayNameFor(model => model.Mission.IsCompleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Mission.CompleteTime" class="control-label"></label>
                <input asp-for="Mission.CompleteTime" class="form-control" />
                <span asp-validation-for="Mission.CompleteTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
